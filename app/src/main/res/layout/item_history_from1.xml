<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image_call_history"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#EF9A9A">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_call_history"/>

    </androidx.cardview.widget.CardView>




    <TextView
        android:id="@+id/tv_call_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19 January 2022 16:00"
        app:layout_constraintLeft_toRightOf="@id/card_image_call_history"
        app:layout_constraintTop_toTopOf="@id/card_image_call_history"
        app:layout_constraintBottom_toTopOf="@id/tv_call_history_number"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_call_history_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+998906330999"
        app:layout_constraintLeft_toRightOf="@id/card_image_call_history"
        app:layout_constraintBottom_toBottomOf="@id/card_image_call_history"
        app:layout_constraintTop_toBottomOf="@id/tv_call_history_date"
        android:textStyle="normal"
        android:textSize="10dp"
        android:layout_marginStart="8dp"
        android:textColor="#B0BEC5"
        tools:ignore="HardcodedText,SpUsage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_image_call_history"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#B0BEC5"/>

</androidx.constraintlayout.widget.ConstraintLayout>